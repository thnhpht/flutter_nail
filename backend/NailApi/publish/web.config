<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Cấu hình các handlers -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>

      <!-- Cấu hình ASP.NET Core -->
      <aspNetCore processPath="dotnet" arguments="NailApi.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />

      <!-- Cho phép các HTTP methods PUT và DELETE -->
      <security>
        <requestFiltering>
          <verbs>
            <add verb="PUT" allowed="true" />
            <add verb="DELETE" allowed="true" />
          </verbs>
        </requestFiltering>
      </security>
    </system.webServer>
  </location>
</configuration>
